<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="productDao" class="com.mbc.photos.shop.dao.ProductDaoInMemory"></bean>
    <bean id="productService" class="com.mbc.photos.shop.service.ProductService">
        <constructor-arg name="productDao" ref="productDao"></constructor-arg>
    </bean>
    <bean id="cliController" class="com.mbc.photos.shop.cli.CliController">
        <constructor-arg name="productService" ref="productService"></constructor-arg>
    </bean>

</beans>